<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fun.hades.mapper.SysProjectModuleMapper">
    <!-- 根据项目ID查询模块列表 -->
    <select id="selectByProjectId" resultType="fun.hades.entity.SysProjectModule">
        SELECT * FROM sys_project_module
        WHERE project_id = #{projectId} AND is_deleted = 0
        ORDER BY sort ASC
    </select>
</mapper>